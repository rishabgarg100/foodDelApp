  </div>
  </div>
</nav>

 
<div class = "container">
   <div class="jumbotron jumbotron-fluid">
      <div class="container">
        <h1 class="display-4"><%= query.username  %></h1>
        <p class="lead"><%= query.ques %></p>
  </div>
  
</div>
 <% if(currentUser.username == query.username){ %>
  <a href = "/query/delete/<%=  query._id %>"><button type="button" class="btn btn-danger">Delete Query</button></a>
  <% } %>
  <div class="ui comments">
  <h3 class="ui dividing header">Comments</h3>
  <% for(var i =0;i<comments.length;i++){ %>
   <div class="comment">
    
    <div class="content">
      <a class="author"><%= comments[i].username %></a>
      <div class="metadata">
         
      </div>
      <div class="text">
        <%= comments[i].comment %>
      </div>
      
      </div>
      </div>
   
<%  if( currentUser  &&comments[i].username == currentUser.username){ %>
        
      <a  href = "/comments/delete/<%= comments[i]._id %>/<%= query._id %>"><button type="submit" class = "btn btn-danger btn-sm">Delete</button></a>
  

    <%    }  %>
<% } %>
   <a href = "/newcomment/<%= query._id %>"><button class = "btn btn-primary btn-sm">Comment</button></a>
  
  
      </div>
  
  
  
  
  
    
</div>

